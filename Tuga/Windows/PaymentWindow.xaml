<Window x:Class="Tuga.Windows.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tuga.Windows"
        mc:Ignorable="d"
        Title="PaymentWindow"  Height="800" Width="1200" Background="#FFC4FDC4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="2" Source="/Photo/PaymentImg.png"></Image>
        <WrapPanel Visibility="Visible" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin=" 0 0 30 0">
            <Button x:Name="PayByCardBtn" Height="130" Width="300" Background="Black" Margin="75 0 0 0" Foreground="LimeGreen" FontFamily="Council(RUS BY LYAJKA)" FontSize="48" Click="PayByCardBtn_Click">
                <Image Source="/Photo/PayByCardImg.png" />
            </Button>
            <Button x:Name="AuthBtn" Height="130" Width="300" Background="Black" Margin="75 0 0 0" Foreground="LimeGreen" FontFamily="Council(RUS BY LYAJKA)" FontSize="48" Click="AuthBtn_Click">
                <Image Source="/Photo/PayByCashImg.png" />
            </Button>
        </WrapPanel>
    </Grid>
</Window>
